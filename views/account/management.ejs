<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <%- messages() %>
  <div class="manage">
    <% if (user) { %>
      <h2>Welcome <%= user.account_firstname %></h2>

      <p><a href="/account/update/<%= user.account_id %>">Update Account Information</a></p>

      <% if (user.account_type === "Employee" || user.account_type === "Admin") { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv">Go to Inventory Management</a></p>
      <% } %>
    <% } %>
  </div>
</body>