<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
</head>
<body>
  <div class="register-container">
    <h1><%= title %></h1>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
      </ul>
    <% } %>
    
    <div class="form">
    <form action="/account/register" method="post">
        <label for="first_name">First Name:</label>
        <input type="text" id="first_name" name="account_firstname" required
                value="<%= typeof first_name !== 'undefined' ? first_name : '' %>">

        <label for="last_name">Last Name:</label>
        <input type="text" id="last_name" name="account_lastname" required
                value="<%= typeof last_name !== 'undefined' ? last_name : '' %>">

        <label for="email">Email Address:</label>
        <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address"
                value="<%= typeof email !== 'undefined' ? email : '' %>">

        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <div class="password-hint">
            *Password must be at least 12 characters, include 1 capital letter, 1 number, and 1 special character.
        </div>

        <button type="submit">Register</button>
      </form>

    
      <p>Already have an account? <a href="/account/login">Login here</a></p>
    </div>
  </div>
</body>