<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <%- messages() %>
  <div class="form">
    <form action="/account/login" method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <div class="input-hint">
            *Password must be at least 12 characters, include 1 capital letter, 1 number, and 1 special character.
        </div>

        <button type="submit">Login</button>
    </form>

    <p>No account? <a href="/account/register">Sign-up here</a></p>
  </div>
</body>